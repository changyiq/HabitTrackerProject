<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:cardBackgroundColor="#FBFBF6"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="1dp"
    app:contentPaddingBottom="0.2dp"
    app:contentPaddingTop="0.2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/habit_name"
            style="@style/Widget.HabitTracker.HabitItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="Exercise"
            app:layout_constraintEnd_toStartOf="@+id/item_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_price"
            style="@style/Widget.HabitTracker.HabitItemTextView"
            android:layout_width="62dp"
            android:layout_height="32dp"
            android:layout_below="@+id/habit_name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="-26dp"

            android:layout_marginEnd="234dp"
            android:layout_toEndOf="@+id/habit_name"
            android:fontFamily="sans-serif-medium"
            android:text="$4.99"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/habit_name"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-147dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="48dp"
            android:layout_toEndOf="@+id/item_price"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>